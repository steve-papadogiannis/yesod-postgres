User json
    email Text
    password Text Maybe -- Password may not be set yet
    verkey Text Maybe -- Used for resetting passwords
    tokenExpiresAt UTCTime default=CURRENT_TIMESTAMP
    verified Bool
    UniqueUser email
    deriving Typeable
Email json
    email Text
    userId UserId Maybe
    verkey Text Maybe
    UniqueEmail email
Comment json
    message Text
    userId UserId Maybe
    deriving Eq
    deriving Show
